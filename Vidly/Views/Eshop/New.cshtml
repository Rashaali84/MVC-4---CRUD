@model Vidly.ViewModels.NewShopShopTypesViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>


@using (Html.BeginForm("Create","Eshop")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Eshop</h4>
        <hr />
        @Html.ValidationSummary(true, "Please Fix all these errors", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Eshop.EshopName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Eshop.EshopName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Eshop.EshopName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Eshop.EshopTypeId, "EshopTypeId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Eshop.EshopTypeId, new SelectList(Model.EshopTypeList , "EshopTypeId", "EshopTypeName"),"Select a type", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Eshop.EshopTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List","About","Eshop")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
